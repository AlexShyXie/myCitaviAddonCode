<UserControl x:Class="PDFThumbnailTranslation.TranslationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300">
    <!-- 把这个 Style 添加到这里 -->
    <UserControl.Resources>
        <Style x:Key="TextBoxWithEllipsisStyle" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <!-- 用于显示省略号的 TextBlock -->
                                <TextBlock x:Name="EllipsisTextBlock"
                                           Text="{TemplateBinding Text}"
                                           TextTrimming="CharacterEllipsis"
                                           Padding="{TemplateBinding Padding}"
                                           VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                           Margin="1,0,0,0" />

                                <!-- 用于编辑的 ScrollViewer (TextBox的默认内容) -->
                                <ScrollViewer x:Name="PART_ContentHost"
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- 当 TextBox 获得焦点时，隐藏 TextBlock，显示 ScrollViewer -->
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="EllipsisTextBlock" Property="Visibility" Value="Collapsed" />
                                <Setter TargetName="PART_ContentHost" Property="Visibility" Value="Visible" />
                            </Trigger>
                            <!-- 当 TextBox 失去焦点时，显示 TextBlock，隐藏 ScrollViewer -->
                            <Trigger Property="IsFocused" Value="False">
                                <Setter TargetName="EllipsisTextBlock" Property="Visibility" Value="Visible" />
                                <Setter TargetName="PART_ContentHost" Property="Visibility" Value="Collapsed" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 原文区域 -->
        <Label Grid.Row="0" Content="原文:" FontWeight="Bold"/>
        <TextBox Grid.Row="1" Name="SourceTextBox" 
                 TextWrapping="Wrap" 
                 VerticalScrollBarVisibility="Auto" 
                 AcceptsReturn="True" 
                 IsReadOnly="False"/>

        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="API Key:" VerticalAlignment="Center">
                    <Label.Resources>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                        </Style>
                    </Label.Resources>
                </Label>
                <TextBox Name="ApiKeyTextBox" 
                     Grid.Row="0" 
                     Grid.Column="1" 
                     Margin="5,0,0,0" 
                     MinWidth="100"
                     Style="{StaticResource TextBoxWithEllipsisStyle}" />


                <Label Grid.Row="1" Grid.Column="0" Content="Prompt:" VerticalAlignment="Center"/>
                <TextBox Name="PromptTextBox" Grid.Row="1" Grid.Column="1" 
                         TextWrapping="Wrap" 
                         Margin="5,0,0,0" 
                         VerticalScrollBarVisibility="Auto"
                         MinHeight="40"/>
            </Grid>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,5,0,0">
                <CheckBox Name="AutoTranslateCheckBox" Content="选中后自动翻译" HorizontalAlignment="Center" Margin="0,5"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Name="TranslateButton" Content="翻译" Width="80" Margin="5,0" Click="TranslateButton_Click"/>
                    <Button Name="SaveConfigButton" Content="保存配置" Width="80" Margin="5,0" Click="SaveConfigButton_Click"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- 译文区域 -->
        <Label Grid.Row="3" Content="译文:" FontWeight="Bold"/>
        <TextBox Grid.Row="3" Name="TargetTextBox" 
                 TextWrapping="Wrap" 
                 VerticalScrollBarVisibility="Auto" 
                 AcceptsReturn="True" FontSize="18"/>
    </Grid>
</UserControl>
